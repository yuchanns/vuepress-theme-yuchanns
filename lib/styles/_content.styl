.content__default
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji
  font-size 16px
  word-wrap break-word
  line-height 1.5
  @media (min-width 768px)
    padding 40px
  img
    max-width 100%
    box-sizing initial
    background-color $white

  h1
  h2
    padding-bottom .3em
    border-bottom 1px solid $gray
  
  h1
  h2
  h3
  h4
  h5
  h6
    margin-top -3.1rem
    margin-bottom 16px
    padding-top 4.6rem
    font-weight 600
    line-height 1.25
    &:hover
      .md-custom-anchor
        visibility visible
  
  h1
    font-size 2em
  h2
    font-size 1.5em
  h3
    font-size 1.25em
  h4
    font-size 1em
  h5
    font-size .875em
  h6
    font-size .85em
    color #6a737d
  hr
    height 1px
    padding 0
    margin 24px 0
    background-color $gray
    border 0
    overflow hidden
    box-sizing initial
  
  ol ol, ol ul ,ul ol ,ul ul
    margin-top 0
    margin-bottom 0  

  ol
  ul
    padding-left 2em

  li+li
    margin-top .25em

  li
    &>p
      margin-top 16px

  table
    display block
    width 100%
    overflow auto
    tr
      background-color $white
      border-top 1px solid #c6cbd1
      &:nth-child(2n)
        background-color #f6f8fa
    th
      font-weight 600
    td
    th
      padding 6px 13px
      border 1px solid #dfe2e5
  
  ol
  ul
  p
  blockquote
  pre
  table
    margin-top 0
    margin-bottom 16px

  blockquote
    padding 0 1em
    color #6a737d
    border-left .25em solid #dfe2e5
  
  .highlight pre
  pre
    padding 16px
    overflow auto
    font-size 85%
    line-height 1.45
    background-color #f6f8fa
    border-radius 3px
  
  pre
    word-wrap normal
    &>code
      padding 0
      margin 0
      font-size 100%
      word-break normal
      white-space pre
      background transparent
      border 0
    code
    tt
      display inline
      max-width auto
      padding 0
      margin 0
      overflow visible
      line-height inherit 
      word-wrap normal
      background inherit
      border 0

  code
  tt
    padding .2em .4em
    margin 0
    font-size 85%
    background-color rgba(27 31 35 .05)
    border-radius 3px
  
.md-custom-anchor
  visibility hidden
  
.header-anchor
  float left
  margin-left -20px
  padding-right 4px
  line-height 1

.custom-block
  padding .1rem 1.5rem
  margin 1rem 0
  &.warning
    color #735c0f
    background-color #fffbdd
    border 1px solid rgba(27 31 35 .15)
  &.tip
    background-color lighten($accentColor, 95.2%)
    border 1px solid lighten($accentColor, 81%)
  &.danger
    color #cb2431
    border 1px solid #d73a49

.custom-block-title
  font-weight 600
  margin-bottom -.4rem
  margin-top 16px!important
