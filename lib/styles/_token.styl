div[class*=language-]
  position relative
  background-color #f6f8fa
  border-radius 6px
  pre
  pre[class*=language-]
    background transparent
    position relative
    z-index 1
  .highlight-lines
    user-select none
    padding-top 1.0rem
    position absolute
    top 0
    left 0
    width 100%
    line-height 1.2
    .highlighted
      background-color $whitebdd
  &.line-numbers-mode
    pre
      padding-left 3rem
      vertical-align middle
    .line-numbers-wrapper
      position absolute
      top 0
      width 2rem
      text-align center
      color rgba(27 31 35 .3)
      padding 1.0rem 0
      line-height 1.2
      .line-number
        position relative
        z-index 4
        user-select none
        font-size 0.85em
        &:hover
          color rgba(27 31 35 .6)
    &:after
      content ''
      position absolute;
      z-index 2
      top 0
      left 0
      width 2rem
      height 100%
      border-radius 6px 0 0 6px
      background-color #f6f8fa
      border-right 1px solid $white

.token
  &.keyword
  &.operator
    color #d73a49
  &.function-variable
    color #6f42c1
  &.function
    color #005cc5
  &.parameter
    color #24292e
  &.number
  &.constant
  &.boolean
    color #005cc5
  &.double-quoted-string
  &.single-quoted-string
  &.string
    color #032f62
  &.variable
    color #24292e
  &.comment
    color #6a737d
  &.builtin
    color #e36209
  &.class-name
    color #6f42c1